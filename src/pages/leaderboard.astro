---
import { App } from "../components/App";
import "../styles/global.css";

export const prerender = false;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SnapBet Leaderboard</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <style is:global>
      :root {
        --bg-dark: #050505;
        --card-bg: #111111;
        --border-color: #222;
        --accent-yellow: #ffe600;
        --text-main: #ffffff;
        --text-muted: #888888;
        --success-green: #00ff94;
      }

      * {
        box-sizing: border-box;
      }

      body {
        font-family:
          "Inter",
          -apple-system,
          BlinkMacSystemFont,
          sans-serif;
        background-color: var(--bg-dark);
        color: var(--text-main);
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 40px 20px;
        background-image: radial-gradient(
          circle at 50% 0%,
          rgba(255, 230, 0, 0.15) 0%,
          transparent 40%
        );
      }

      .container {
        width: 100%;
        max-width: 700px;
      }

      /* Navigation */
      .nav-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        width: 100%;
      }

      .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        transition: color 0.2s;
      }

      .back-btn:hover {
        color: var(--accent-yellow);
      }

      .logo-text {
        font-weight: 900;
        font-size: 1.2rem;
        letter-spacing: -0.5px;
        color: #fff;
      }

      .logo-accent {
        color: var(--accent-yellow);
      }

      /* Header */
      h1 {
        text-align: center;
        font-size: 3.5rem;
        font-weight: 800;
        margin: 0 0 10px 0;
        letter-spacing: -2px;
        line-height: 1;
        background: linear-gradient(180deg, #fff 0%, #aaa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .subtitle {
        text-align: center;
        color: var(--text-muted);
        margin-bottom: 50px;
        font-size: 1.1rem;
      }

      /* Leaderboard List */
      .leaderboard-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .header-row {
        display: grid;
        grid-template-columns: 60px 1fr 120px;
        padding: 0 20px;
        margin-bottom: 10px;
        color: var(--text-muted);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
      }

      .player-row {
        display: grid;
        grid-template-columns: 60px 1fr 120px; /* Rank | Player | Score */
        align-items: center;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 16px 20px;
        transition:
          transform 0.2s,
          border-color 0.2s;
      }

      .player-row:hover {
        transform: translateY(-2px);
        border-color: rgba(255, 230, 0, 0.3);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      }

      /* Column Styles */
      .col-rank {
        font-weight: 700;
        color: var(--text-muted);
        font-size: 1.1rem;
        font-feature-settings: "tnum";
        text-align: center;
      }

      .rank-1 {
        color: #ffd700;
        font-size: 1.4rem;
      }
      .rank-2 {
        color: #c0c0c0;
        font-size: 1.3rem;
      }
      .rank-3 {
        color: #cd7f32;
        font-size: 1.2rem;
      }

      .col-player {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #222;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.8rem;
        color: #fff;
        border: 2px solid #333;
      }

      .rank-1 .avatar {
        border-color: #ffd700;
        background: rgba(255, 215, 0, 0.1);
        color: #ffd700;
      }
      .rank-2 .avatar {
        border-color: #c0c0c0;
        background: rgba(192, 192, 192, 0.1);
        color: #c0c0c0;
      }
      .rank-3 .avatar {
        border-color: #cd7f32;
        background: rgba(205, 127, 50, 0.1);
        color: #cd7f32;
      }

      .player-name {
        font-weight: 600;
        color: #fff;
        text-decoration: none;
      }

      .player-name:hover {
        color: var(--accent-yellow);
        text-decoration: underline;
      }

      .col-score {
        text-align: right;
        font-family: "Inter", monospace;
        font-weight: 700;
        color: var(--success-green);
        font-size: 1.1rem;
      }

      .loading-state {
        text-align: center;
        padding: 40px;
        color: var(--text-muted);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <nav class="nav-bar">
        <a href="/" class="back-btn">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M19 12H5"></path><path d="M12 19l-7-7 7-7"></path></svg
          >
          Back to Arena
        </a>
        <div class="logo-text">Snap<span class="logo-accent">Bet</span></div>
      </nav>

      <h1>Leaderboard</h1>
      <p class="subtitle">Top performers in the Yellow Network sandbox.</p>

      <div class="leaderboard-list">
        <!-- Header -->
        <div class="header-row">
          <div style="text-align: center">Rank</div>
          <div>Player</div>
          <div style="text-align: right">Profit</div>
        </div>

        <!-- content injected here -->
        <div id="leaderboard-content" style="display: contents;">
          <div class="loading-state">Loading data...</div>
        </div>
      </div>
    </div>

    <script>
      interface User {
        address: string;
        ens_name: string | null;
        balance: number;
      }

      interface APIResponse {
        leaderboard?: User[];
        error?: string;
      }

      async function loadLeaderboard() {
        try {
          const res = await fetch("/api/leaderboard");
          // Type assertion to tell TypeScript what shape the data has
          const data = (await res.json()) as APIResponse;

          const container = document.getElementById("leaderboard-content");
          if (!container) return;

          if (data.error) {
            container.innerHTML = `<div class="loading-state" style="color: #ef4444;">Error: ${data.error}</div>`;
            return;
          }

          if (data.leaderboard && data.leaderboard.length > 0) {
            container.innerHTML = data.leaderboard
              .map((user, index) => {
                const rank = index + 1;
                const rankClass = rank <= 3 ? `rank-${rank}` : "";

                const displayName =
                  user.ens_name ||
                  `${user.address.slice(0, 6)}...${user.address.slice(-4)}`;

                return `
                    <div class="player-row ${rankClass}">
                        <div class="col-rank ${rankClass}">
                            #${rank}
                        </div>
                        <div class="col-player">
                            <div class="avatar">
                                ${displayName.slice(0, 2).toUpperCase()}
                            </div>
                            <a href="https://etherscan.io/address/${user.address}" target="_blank" class="player-name">
                                ${displayName}
                            </a>
                        </div>
                        <div class="col-score">
                            +$${user.balance.toLocaleString()}
                        </div>
                    </div>
                `;
              })
              .join("");
          } else {
            container.innerHTML =
              '<div class="loading-state">No players yet. Be the first!</div>';
          }
        } catch (e) {
          console.error(e);
          const container = document.getElementById("leaderboard-content");
          if (container) {
            container.innerHTML = `<div class="loading-state" style="color: #ef4444;">Failed to load leaderboard</div>`;
          }
        }
      }

      // Load on mount
      loadLeaderboard();
    </script>
  </body>
</html>
